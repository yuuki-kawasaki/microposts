<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span class="location"><%= @user.location %></span>
    </section>
    <%= link_to 'Profile', @user %><br>
    <%= link_to 'Followers', followers_user_path(@user) %><br>
    <%= link_to 'Like', like_user_path(@user) %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.following_users.any? %>
      <h3>Followings (<%= @user.following_users.count %>)</h3>
      <ol class="users">
        <%= render partial: 'users/user', collection: @following_users %>
      </ol>
    <% end %>
  </div>
</div>